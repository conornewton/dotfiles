set nocompatible " fuck off vi

execute pathogen#infect()
filetype plugin indent on

filetype on
syntax on

set number                  "show line number
set cursorline

"shows trailing spaces as dots
set list
" not working properly
set listchars=tab:≫\ ,trail:·

set tabstop=4               "tab stuff
set shiftwidth=4
set expandtab
set softtabstop=4

"F8 toggles between converting tabs to spaces
nnoremap <F8> :setlocal expandtab!<CR>

"do not convert tabs to spaces in make files
autocmd FileType make setlocal noexpandtab

set autoindent
set smartindent

set hlsearch                "highlight search items
set incsearch               "show maches as you search

set noswapfile

"C L-R changes tab
"A L-R moves current tab
nnoremap <C-H> :tabprevious<CR>
nnoremap <C-L> :tabnext<CR>

"Syntastic
set statusline+=%#warningmsg#
set statusline+=%{SyntasticStatuslineFlag()}
set statusline+=%*

let g:syntastic_always_populate_loc_list = 1
let g:syntastic_auto_loc_list = 1
let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 0


"hides gui menus
set guioptions-=m
set guioptions-=T
set guioptions-=R
set guioptions-=r
set guioptions-=L
